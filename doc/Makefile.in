PREFIX =	@prefix@
PREFIXMAN =	${PREFIX}/man
MAN1 =		af.1

all: amberfish.pdf

amberfish.pdf: amberfish.texi
	texi2dvi --pdf amberfish.texi

amberfish.html: amberfish.texi version.texi
	makeinfo --force --html -I. amberfish.texi -o amberfish.html

%.1.gz: %.1
	gzip -c -9 $< > $@

install: all
	chmod a+r ${MAN1}
	cp ${MAN1} ${PREFIXMAN}/man1/.

#uninstall:
#	cd ${PREFIXMAN}/man1 ; rm -f ${MAN1}

clean:
	rm -f amberfish.{aux,cp,cps,fn,fns,ky,log,pg,tmp,toc,tp,vr,vrs}

distclean:
	${MAKE} clean
	rm -f *~ *#
