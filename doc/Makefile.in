PREFIX =	@prefix@
PREFIXMAN =	${PREFIX}/man
MAN1 =		af.1.gz

all: amberfish.pdf ${MAN1}

amberfish.pdf: amberfish.texi
	texi2dvi --pdf amberfish.texi

amberfish.html: amberfish.texi version.texi
	makeinfo --force --html -I. amberfish.texi -o amberfish.html

%.1.gz: %.1
	gzip -c -9 $< > $@

install: all
	chmod a+r ${MAN1}
	if [ -f ${PREFIXMAN}/man1/af.1 ] ; then \
		rm -f ${PREFIXMAN}/man1/af.1 ; \
        fi
	cp ${MAN1} ${PREFIXMAN}/man1/.

uninstall:
	if [ -d ${PREFIXMAN}/man1 ] ; then \
		cd ${PREFIXMAN}/man1 ; \
		rm -f ${MAN1} ; \
	fi

clean:
	rm -f amberfish.aux amberfish.cp amberfish.cps amberfish.fn \
		amberfish.fns amberfish.ky amberfish.log amberfish.pg \
		amberfish.tmp amberfish.toc amberfish.tp amberfish.vr \
		amberfish.vrs \
		${MAN1}

distclean:
	${MAKE} clean
	rm -f *~ *#
